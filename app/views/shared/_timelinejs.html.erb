<section id="timeline" name="timeline"></section>
  <div id="timelinewrap">
    <div class="container">
      <div class="row">
        <div class="col-lg-8-offset-2 centered">
          <h1 class="sectionHead">A BRIEF HISTORY</h1>
          <h3 class="text-muted">Of Craig &amp; Nicole</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
        <% if user_signed_in? %>
          <a href="/stories/new" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#new_story" >
            New
          </a>
        <% end %>
        </div>
      </div>
      <div class="container-fluid timeline-container">
        <ul class="timeline" id="timelineRemote"></ul>
      </div>
    </div>
  </div>

  <script type="text/template" id="timelineTemplate">
  {{ _.each(stories, function(story, key, list){ }}
    <li>
      <div class="timeline-badge"><i class="icon icon-{{= story.icon }}"></i></div>
      <div class="timeline-panel">
        <div class="timeline-heading">
          <h3 class="timeline-title">{{= story.title }}</h3>
            <% if user_signed_in? %>
              <p>
                <a class="btn btn-primary btn-xs edit" data-target="#modal_form_edit_story-{{= story.id }}" data-toggle="modal" href="/stories/{{= story.id }}/edit">Edit</a>
                <a class="btn btn-danger btn-xs" data-confirm="Are you sure?" data-method="delete" href="/stories/{{= story.id }}" rel="nofollow">Delete</a>
              </p>
            <% end %>
          <p><small class="text-muted"><i class="fa fa-clock-o" ></i> {{= story.time }}</small></p>
        </div>
        <div class="timeline-body">
          <p>
            {{= story.content }}
          </p>
        </div>
      </div>
    </li>
    <div class="modal fade" id="modal_form_edit_story-{{= story.id }}" tabindex="-1" role="dialog" aria-labelledby="edit_story_label" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="edit_story_label">Modal title</h4>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    {{ }); }}
  </script>