<section id="about" name="about"></section>
<div id="aboutwrap">
  <div class="container">

  <div id="remoteBio"></div>


  </div><!-- /container -->
</div><!-- /aboutwrap -->

<script type="text/template" id="bioTemplate">
  {{ _.each(bios, function(bio, key, list){ }}
    <div class="row">
      <div class="col-sm-4 name">
        {{ if(bio.person === 'Nicole Kulick'){ }}
          <img src="assets/nicole.jpg" class="img-responsive" >
        {{ } else { }}
          <img src="assets/craig.jpg" class="img-responsive" >
        {{ } }}
        <p>{{= bio.person }}</p>
        <div class="name-label"></div>
      </div>
      <div class="col-sm-8 name-desc">
        <h2>{{= bio.title }}</h2>
        <div class="row">
          <div class="col-sm-6">
            <div class="name-zig"></div>
          </div>
          <% if user_signed_in? %>
            <div class="col-sm-6">
              <a href="/biographies/{{= bio.id }}/edit" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal_form_edit_bio-{{= bio.id }}">
                Edit
              </a>
            </div>
          <% end %>
        </div>
        
        {{= bio.content }}
      </div>
    
    </div>

    <div class="modal fade" id="modal_form_edit_bio-{{= bio.id }}" tabindex="-1" role="dialog" aria-labelledby="edit_bio_label" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="edit_bio_label">Modal title</h4>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
  {{ }); }}
</script>